<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"

    tools:context=".AddtocartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:textColor="#0B0C0C"
            android:textSize="30sp"
            android:id="@+id/mTvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textColor="#060707"
            android:textSize="20sp"
            android:id="@+id/mTvAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textColor="#010202"
            android:textSize="20sp"
            android:id="@+id/mTvPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textColor="#080809"
            android:textSize="20sp"
            android:id="@+id/mTvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textColor="#080809"
            android:textSize="20sp"
            android:id="@+id/mTvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textColor="#080809"
            android:textSize="20sp"
            android:id="@+id/mTvDeliveryPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/btnpurchase"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="PURCHASE" />
    </LinearLayout>




</ScrollView>