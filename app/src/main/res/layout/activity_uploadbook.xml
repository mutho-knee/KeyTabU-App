<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UploadbookActivity"
    android:padding="30dp"
    android:background="@drawable/cut_card_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mtvtextReal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="KEYTABU UPLOADS" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/mEdtBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter book name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/mEdtBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter book author"
            android:inputType="text"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/mEdtBookPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter book publisher"
            android:inputType="text"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Spinner
            android:layout_margin="5dp"
            android:entries="@array/categories"
            android:id="@+id/mSpinnerBookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/mEdtBookPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter book price"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/mEdtBookDeliveryPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter book delivery price"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="#FAF5F5"
            />

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_choose_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Choose image"
            />

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btn_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            />
    </LinearLayout>

</ScrollView>